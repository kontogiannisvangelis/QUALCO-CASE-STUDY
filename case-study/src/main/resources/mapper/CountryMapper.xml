<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qualco.casestudy.repository.CountryMapper">

    <select id="findSummaries" resultType="Country">
        SELECT
            country_id AS countryId,
            name,
            area,
            country_code2 AS countryCode2
        FROM countries
        ORDER BY name;
    </select>

</mapper>